  <div class="field">
    <%= form.label :city %>
    <%= form.select :city, @cities.map(&:name), {include_blank: '----------'}%>

  </div>

  <div class="field">
    <%= form.label :start_on %>
    <%= form.date_field :start_on %>
  </div>

  <div class="field">
    <%= form.label :finish_on %>
    <%= form.date_field :finish_on %>
  </div>

  <div class="field">
    <%= form.label :flexible %>
    <%= form.check_box :flexible %>
  </div>

  <div class="field">
    <%= form.label :description %>

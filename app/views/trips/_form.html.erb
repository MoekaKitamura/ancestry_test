<%= form_with(model: trip, local: true) do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :area %>
    <%= form.select :area, @areas.map(&:name), {include_blank: '----------'}%>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.select :country, @countries.map(&:name), {include_blank: '----------'}%>
  </div>


<p id="notice"><%= notice %></p>

 <h1>Trips</h1>

 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Country</th>
       <th>City</th>
       <th>Start on</th>
       <th>Finish on</th>
       <th>Flexible</th>
       <th>Description</th>
       <th>Goal</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @trips.each do |trip| %>
       <tr>
         <td><%= trip.title %></td>
         <td><%= trip.country %></td>
         <td><%= trip.city %></td>
         <td><%= trip.start_on %></td>
         <td><%= trip.finish_on %></td>
         <td><%= trip.flexible %></td>
         <td><%= trip.description %></td>
         <td><%= trip.goal %></td>
         <td><%= link_to 'Show', trip %></td>
         <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
         <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>

 <br>

<p>カテゴリー</p>
 <% @parents.each do |parent| %>
    <p>1.エリア: <%= parent.name %></p>
 <% parent.children.each do |child| %>
    <p>__2.国: <%= child.name %></p>
 <% child.children.each do |grandchild| %>
    <p>____3.都市: <%= grandchild.name %></p>
 <% end %>
 <% end %>
 <% end %>

<br>

 <%= link_to 'New Trip', new_trip_path %>